<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista árbol (list)  -->
        <record id="view_box_payment_method_tree" model="ir.ui.view">
            <field name="name">box.payment.method.list</field>
            <field name="model">box.payment.method</field>
            <field name="arch" type="xml">
                <list string="Método de pago">
                    <field name="name"/>
                    <field name="company_id" readonly="1"/>
                </list>
            </field>
        </record>

        <!-- Vista formulario (form)  -->
        <record id="view_box_payment_method_form" model="ir.ui.view">
            <field name="name">box.payment.method.form</field>
            <field name="model">box.payment.method</field>
            <field name="arch" type="xml">
                <form string="Método de pago">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="company_id" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_box_payment_method_view" model="ir.actions.act_window">
            <field name="name">Métodos de pago</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">box.payment.method</field>
            <field name="view_mode">form</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem
            action="action_box_payment_method_view" id="menu_box_payment_method"
            name="Métodos de pago"
            parent="account.menu_finance_configuration" sequence="7"
        />
    </data>
</odoo>