<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_register_form_box" model="ir.ui.view">
        <field name="name">view.account.payment.register.form.box</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group2']/field[@name='communication']" position="after">
                <field name="cashier_id" invisible="payment_type != 'inbound'" domain="[('company_id', '=', company_id)]"/>
                <field name="box_number_id" invisible="payment_type != 'inbound'" domain="[('company_id', '=', company_id)]"/>
                <field name="box_payment_method_id" invisible="payment_type != 'inbound'" domain="[('company_id', '=', company_id)]"/>
            </xpath>
        </field>
    </record>
</odoo>