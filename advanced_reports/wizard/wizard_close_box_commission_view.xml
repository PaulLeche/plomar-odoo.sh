<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_close_box_commission_form" model="ir.ui.view">
        <field name="name">wizard.close.box.commission.form</field>
        <field name="model">wizard.close.box.commission</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <label for="date_from" string="Periodo"/>
                            <div class="o_row">
                                <field name="date_from" class="oe_inline"/>
                                <span> - </span>
                                <field name="date_to" class="oe_inline"/>
                            </div>
                            <field name="box_number_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}" domain="[('company_id', '=', company_id)]"/>
                            <field name="company_id" options="{'no_create_edit': True}" readonly="1" invisible="0"/>
                        </group>
                        <group>
                            <field name="report_type" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="print_report_close_box_commission_xls" string="Reporte XLS" type="object" class="btn-primary"/>
                    <button string="Cerrar" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="action_report_cierre_caja_commission" model="ir.actions.act_window">
        <field name="name">Reporte: Cierre de caja para comisión</field>
        <field name="res_model">wizard.close.box.commission</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_close_box_commission_form"/>
        <field name="context">{'default_report_type': 'box'}</field>
        <field name="target">new</field>
    </record>

    <menuitem action="action_report_cierre_caja_commission"
              id="menu_report_cierre_caja_commission"
              name="Reporte cierre de caja para comisión"
              parent="account.menu_finance_reports"
              sequence="92"/>

</odoo>