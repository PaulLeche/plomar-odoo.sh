<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">view.move.form.extend</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_post']" position="after">
                <button name="action_print_fel" class="btn-primary" type="object" string="Imprimir FEL"  invisible="1"/>
            </xpath>

            <label for="journal_id" position="attributes">
                <attribute name="invisible">0</attribute>
            </label>

            <div name="journal_div" position="attributes">
                <attribute name="invisible">0</attribute>
            </div>

            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="fe_type" force_save="1" readonly="move_type not in ['in_invoice', 'in_refund', 'in_receipt']" invisible="move_type not in ['out_invoice', 'out_refund', 'in_invoice', 'in_refund'] or not company_id.fe_enabled"/>
                <field name="fe_phrase_ids" widget="many2many_tags" invisible="not company_id.fe_enabled"/>
                <field name="tipo_personeria" force_save="1" invisible="fe_type not in ['RDON'] or not company_id.fe_enabled"/>
            </xpath>
            
            <xpath expr="//group[@id='header_right_group']" position="after">
                <group invisible="move_type not in ['out_invoice', 'out_refund', 'in_invoice', 'in_refund'] or not company_id.fe_enabled">
                    <field name="fe_active" invisible="1"/>
                    <field name="fe_exhangerate"/>
                    <field name="fe_serie" class="serie_alineado" readonly="fe_active == True" invisible="move_type not in ['out_invoice', 'out_refund', 'in_invoice', 'in_refund']"/>
                    <field name="fe_number" class="numero_alineado" readonly="fe_active == True" invisible="move_type not in ['out_invoice', 'out_refund', 'in_invoice', 'in_refund']"/>
                </group>
                <group invisible="move_type not in ['out_invoice', 'out_refund', 'in_invoice', 'in_refund'] or not company_id.fe_enabled">
                    <field name="fe_uuid"/>
                    <field name="fe_certification_date"/>
                </group>
            </xpath>

            <xpath expr="//button[@name='button_draft']" position="attributes">
                <attribute name="groups">l10n_gt_fe.set_draft_invoice</attribute>
            </xpath>

            <header position="inside">
                <button name="send_invoice" type="object" class="oe_highlight" string="Certificar DTE" invisible="(process_status in ['cancel', 'ok']) or (state != 'posted') or (fe_active == False) or not company_id.fe_enabled"/>
            </header>
            
            <xpath expr="//notebook" position="inside">
                <page string="Electronic invoice" invisible="move_type == 'entry' or fe_active == False or not company_id.fe_enabled">
                    <div class="oe_button_box" name="button_box">
                        <button string="Compute Payment" name="compute_fe_payment_line" type="object" icon="fa-calendar" invisible="fe_type != 'FCAM' or process_status in ['cancel', 'ok']"/>
                        <button string="Cancel DTE" name="cancel_dte" type="object" icon="fa-chain-broken"  groups="l10n_gt_fe.group_fel_manager" class="oe_stat_button"  invisible="process_status == 'cancel' or state != 'posted'"/>
                        <button string="Get PDF" name="get_pdf" type="object" icon="fa-download"  class="oe_stat_button" invisible="process_status not in ['ok', 'cancel']"/>
                    </div>
                    <group col="2">
                        <field name="process_status" widget="statusbar"/>
                        <field name="fe_count_payment" invisible="fe_type != 'FCAM'" required="fe_type == 'FCAM'" readonly="process_status in ['ok', 'cancel']"/>
                        <field name="fe_payment_frequency" invisible="fe_type != 'FCAM'" required="fe_type == 'FCAM'" readonly="process_status in ['ok', 'cancel']"/>
                        <field nolabel="1" name="fe_payment_line_ids" mode="list" context="{'default_move_id': context.get('active_id', False)}" 
                            invisible="fe_type != 'FCAM'">
                            <list editable="bottom" create="0" delete="0">
                                <field name="sequence" readonly="1"/>
                                <field name="date" required="1"/>
                                <field name="amount" required="1"/>
                                <field name="move_id" invisible="1"/>
                            </list>
                        </field>
                        <field nolabel="1" name="complement_ids" mode="list" context="{'default_move_id': context.get('active_id', False)}"
                            invisible="fe_type != 'FESP'">
                            <list create="0" delete="0">
                                <field name="complement" />
                                <field name="amount" />
                                <field name="base" invisible="1"/>
                                <field name="move_id" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                            </list>                    
                        </field>
                    </group>
                    <group string="XML Response">
                        <group>
                            <field name="fe_xml_file" readonly="1" groups="l10n_gt_fe.group_fel_manager" invisible="1"/>
                            <field name="fe_pdf_file" readonly="1"/>
                        </group>
                        <group>
                            <field name="reversed_entry_id" readonly=" process_status == 'ok'" invisible="fe_type != 'NDEB'" required="fe_type == 'NDEB'"/>
                            <field name="ref" string="Motivo" readonly=" process_status == 'ok'" invisible="fe_type != 'NDEB'" required="fe_type == 'NDEB'"/>
                        </group>
                        <group>
                            <field name="arch_xml" widget="ace" options="{'mode': 'xml'}" groups="l10n_gt_fe.group_fel_manager"/>
                        </group>
                        <group>
                            <field name="sent_arch_xml" widget="ace" options="{'mode': 'xml'}" groups="l10n_gt_fe.group_fel_manager"/>
                        </group>
                    </group>
                    <separator string="SAT Response" invisible="fe_errors == False"/>
                    <field name="fe_errors" invisible="fe_errors == False"/>
                </page>
            </xpath>

            <xpath expr="//field[@name='ref']" position="attributes">
                <attribute name="readonly">state == 'posted'</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_invoice_tree" model="ir.ui.view">
        <field name="name">account.invoice.tree.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="partner_vat" optional="hide" invisible="not company_id.fe_enabled"/>
                <field name="fe_uuid" optional="hide" invisible="not company_id.fe_enabled"/>
                <field name="fe_serie" optional="show" invisible="not company_id.fe_enabled"/>
                <field name="fe_number" optional="show" invisible="not company_id.fe_enabled"/>
                <field name="fe_certification_date" optional="hide" invisible="not company_id.fe_enabled"/>
            </xpath>
        </field>
    </record>

    <record id="account_fe_phrase_view_tree" model="ir.ui.view">
        <field name="name">account.fe.phrase.view.tree</field>
        <field name="model">account.fe.phrase</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name" />
                <field name="description" />
                <field name="type" />
                <field name="code" />
            </list>
        </field>
    </record>

    <record id="account_view_account_invoice_filter_inherit" model="ir.ui.view">
        <field name="name">account.view.account.invoice.filter.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="fe_serie" string="Serie FEL"/>
                <field name="fe_number" string="NÃºmero FEL"/>
            </xpath>
        </field>
    </record>

    <record id="account_fe_phrase_action" model="ir.actions.act_window">
        <field name="name">Frases</field>
        <field name="res_model">account.fe.phrase</field>
        <field name="view_mode">list</field>
    </record>

    <menuitem
        id="account_fe_phrase_menu"
        name="Frases"
        action="account_fe_phrase_action"
        parent="account.menu_finance_configuration"
        sequence="10"/>

    <record id="model_account_move_action_cancel_all" model="ir.actions.server">
        <field name="name">Cancelar Test</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_view_types">form,list</field>
        <field name="state">code</field>
        <field name="code">
            for record in records:
                if record.state in ['posted']:
                    record.action_cancel_all()
        </field>
    </record>

</odoo>