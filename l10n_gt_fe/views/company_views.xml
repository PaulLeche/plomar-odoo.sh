<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="view_company_form" model="ir.ui.view">
            <field name="name">view.company.form.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('o_address_format')]" position="after">
                    <field name="tipo_personeria" invisible="not fel_enabled"/>
                </xpath>
                <notebook position="inside">
                    <page name="fe" string="Electronic Invoice" invisible="not fel_enabled">
                        <group>
                            <field name="fe_user" />
                            <field name="fe_sign_token" />
                            <field name="fe_key_webservice" />
                            <field name="fe_phrase_ids" string="Frases" widget="many2many_tags"/>
                            <field name="afiliacion_iva"/>
                            <field name="fe_establishment_ids" mode="list">
                                <list editable="bottom">
                                    <field name="fe_tradename" />
                                    <field name="fe_code" />
                                    <field name="export_code" />
                                    <field name="company_id" invisible="1"/>
                                </list>
                            </field>
                            <field name="fe_other_email" />
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>

</odoo>
