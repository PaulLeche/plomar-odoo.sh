<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="helpdesk_ticket_form_inherit" model="ir.ui.view">
            <field name="name">helpdesk.ticket.form.inherit</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
            <field name="arch" type="xml">
                <!-- Agregar botón para agendar reuniones relacionadas con el ticket -->
                <xpath expr="//div[@name='button_box']" position="inside">
                    <!-- Botón para agendar reuniones -->
                    <button name="action_schedule_meeting" type="object" class="oe_stat_button" icon="fa-calendar" title="Reuniones">
                        <span class="o_stat_text">Reunión</span>
                    </button>
                    <button name="action_open_sale_order" type="object" class="oe_stat_button" icon="fa-pencil-square-o" title="Ver Presupuesto">
                        <span class="o_stat_text">Presupuestos</span>
                    </button>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="action_create_sale_order" type="object" class="oe_highlight" title="Nuevo Presupuesto">
                        <span class="o_stat_text">Crear Presupuesto</span>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>




