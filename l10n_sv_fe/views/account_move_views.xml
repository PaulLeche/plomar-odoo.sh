<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">view.move.form.extend</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//button[@name='action_post']" position="after">
                <button name="action_print_fel" class="btn-primary" type="object" string="Imprimir FEL" invisible="1" groups="l10n_sv_fe.group_fel_manager"/>
            </xpath>
            
            <!-- <xpath expr="//button[@name='action_reverse']" position="after">
                <button name="action_nr" class="btn-primary" type="object" string="Generar Nota de Remisión" 
                    invisible="fe_type_sv not in ['01','03'] or state not in ['posted']" groups="l10n_sv_fe.group_fel_manager"/>
            </xpath> -->

            <label for="journal_id" position="attributes">
                <attribute name="invisible">0</attribute>
            </label>

            <div name="journal_div" position="attributes">
                <attribute name="invisible">0</attribute>
            </div>

            <field name="partner_shipping_id" position="after">
                <field name="fe_type_sv" force_save="1" 
                    readonly="move_type not in ['in_invoice', 'in_refund', 'in_receipt']" 
                    invisible="move_type not in ['out_invoice', 'out_refund', 'in_invoice', 'in_refund']"
                    groups="l10n_sv_fe.group_fel_manager"/>
                
                <field name="last_payment_sequence" widget="CopyClipboardChar"/>
                    
                <field name="fe_cf" force_save="1" invisible="fe_type_sv not in ['01']" groups="l10n_sv_fe.group_fel_manager"/>
                <field name="fe_payment" force_save="1" readonly="state in ['posted']" groups="l10n_sv_fe.group_fel_manager"/>
                <field name="fe_pay_method" force_save="1" invisible="fe_payment not in ['02']" readonly="state in ['posted']" groups="l10n_sv_fe.group_fel_manager"/>
                <field name="fe_term" force_save="1" invisible="fe_payment not in ['02']" readonly="state in ['posted']" groups="l10n_sv_fe.group_fel_manager"/>
                <field name="fe_period" force_save="1" invisible="fe_payment not in ['02']" readonly="state in ['posted']" groups="l10n_sv_fe.group_fel_manager"/>
                <field name="fe_generation" force_save="1" readonly="state in ['posted']" groups="l10n_sv_fe.group_fel_manager"/>
                <field name="fe_export_services" force_save="1" invisible="fe_type_sv not in ['11']" groups="l10n_sv_fe.group_fel_manager"/>
                
                <field name="fe_incoterm" force_save="1" invisible="fe_export_services in ['02'] or fe_type_sv not in ['11']"
                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}" groups="l10n_sv_fe.group_fel_manager"/>

                <field name="fe_recinto" force_save="1" invisible="fe_export_services in ['02'] or fe_type_sv not in ['11']"
                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}" groups="l10n_sv_fe.group_fel_manager"/>

                <field name="fe_regimen" force_save="1" invisible="fe_export_services in ['02'] or fe_type_sv not in ['11']"
                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}" groups="l10n_sv_fe.group_fel_manager"/>
            </field>

            <xpath expr="//group[@id='header_right_group']" position="after">
                <group invisible="move_type not in ['out_invoice', 'out_refund', 'in_invoice', 'in_refund']" groups="l10n_sv_fe.group_fel_manager">
                    <field name="fe_active_sv" invisible="1"/>
                </group>
            </xpath>

            <xpath expr="//button[@name='button_draft']" position="attributes">
                <attribute name="groups">l10n_sv_fe.set_draft_invoice</attribute>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="Factura Electrónica SV" invisible="move_type in ['entry'] or fe_active_sv == False" groups="l10n_sv_fe.group_fel_manager">
                    <group>
                        <group>
                            <field name="uuid_code"/>
                            <field name="date_certification"/>
                            <field name="numero_control"/>
                            <field name="fact_info"/>
                        </group>
                        <group>
                            <field name="invalidation_type" readonly="state not in ['posted']"/>
                            <field name="motivo_invalidacion" readonly="state not in ['posted']"/>
                        </group>
                    </group>

                    <div class="oe_button_box" name="button_box">
                        <button string="Cancelar DTE" name="cancel_dte" type="object" icon="fa-chain-broken"
                            invisible="state not in ['posted']" groups="l10n_sv_fe.group_fel_manager" class="oe_stat_button"/>

                        <button string="Imprimir DTE" name="get_pdf" type="object" icon="fa-download" class="oe_stat_button"
                            invisible="state not in ['posted','cancel']"/>

                        <button string="Obtener JSON" name="get_json" type="object" icon="fa-code" class="oe_stat_button"
                            invisible="state not in ['posted','cancel']"/>
                    </div>
                </page>
            </xpath>

            <xpath expr="//field[@name='ref']" position="attributes">
                <attribute name="readonly">state in ['posted']</attribute>
            </xpath>
        </field>
    </record>

    <!-- <record id="view_in_invoice_bill_tree" model="ir.ui.view">
        <field name="name">view.in.invoice.bill.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_in_invoice_bill_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree[1]/field[@name='name']" position="after">
                <field name="numero_control" optional="show" groups="l10n_sv_fe.group_fel_manager"/>
            </xpath>
        </field>
    </record> -->

    <record id="account_view_out_invoice_tree_inherit" model="ir.ui.view">
        <field name="name">account.view.out.invoice.tree.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="numero_control" optional="show" groups="l10n_sv_fe.group_fel_manager"/>
            </xpath>
        </field>
    </record>

    <record id="account_view_account_invoice_filter_inherit" model="ir.ui.view">
        <field name="name">account.view.account.invoice.filter.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="numero_control"/>
            </xpath>
        </field>
    </record>

</odoo>