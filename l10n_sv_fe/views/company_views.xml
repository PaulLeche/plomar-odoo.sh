<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_company_form" model="ir.ui.view">
            <field name="name">view.company.form.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook[1]" position="inside">
                    <page name="fe" string="Facturación Electrónica El Salvador" groups="l10n_sv_fe.sv_fe_group_fel_manager" invisible="country_code != 'SV'">
                        <group>
                            <field name="sv_fe_mode_prod" widget="boolean_toggle"/>
                            <field name="sv_fe_user" />
                            <field name="sv_fe_sign_token" invisible="1"/>
                            <field name="sv_fe_key_webservice" />
                            <field name="sv_fe_url_prod" />
                            <field name="sv_fe_url_test" />
                            <field name="sv_fe_establishment_ids" mode="list">
                                <list editable="bottom">
                                    <field name="fe_tradename" />
                                    <field name="fe_code" />
                                    <field name="export_code" />
                                    <field name="company_id" invisible="1"/>
                                </list>
                            </field>
                            <field name="sv_fe_other_email" />
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
