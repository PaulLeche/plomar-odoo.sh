<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="base_view_partner_form_inherit" model="ir.ui.view">
        <field name="name">base.view.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="before">
                <field name="movimiento_preferido_cliente" groups="l10n_sv_fe.group_fel_manager"/>
                <field name="nrc" groups="l10n_sv_fe.group_fel_manager"/>
                <field name="fe_address_dep" groups="l10n_sv_fe.group_fel_manager"/>
                <field name="fe_address_mun" groups="l10n_sv_fe.group_fel_manager"/>
                <field name="fe_country" groups="l10n_sv_fe.group_fel_manager"/>
                <field name="complement_address" groups="l10n_sv_fe.group_fel_manager"/>
                <field name="tipo_persona" groups="l10n_sv_fe.group_fel_manager"/>
                <field name="identification_type" groups="l10n_sv_fe.group_fel_manager"/>
            </xpath>
            <xpath expr="//field[@name='function']" position="before">
                <field name="fe_code_activity" groups="l10n_sv_fe.group_fel_manager"/>
            </xpath>
            <xpath expr="//field[@name='vat']" position="replace">
                <field name="vat" string="NIT" invisible="identification_type != '36'" groups="l10n_sv_fe.group_fel_manager"/>
                <field name="dui_field" invisible="identification_type != '13'" groups="l10n_sv_fe.group_fel_manager"/>
                <field name="other_field" invisible="identification_type != '37'" groups="l10n_sv_fe.group_fel_manager"/>
                <field name="passport_field" invisible="identification_type != '03'" groups="l10n_sv_fe.group_fel_manager"/>
                <field name="carnet_residente_field" invisible="identification_type != '02'" groups="l10n_sv_fe.group_fel_manager"/>
            </xpath>
            <xpath expr="//field[@name='email']" position="attributes">
                <attribute name="required">True</attribute>
            </xpath>
        </field>
    </record>

</odoo>