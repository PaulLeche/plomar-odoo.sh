<?xml version="1.0" encoding="utf-8"?>
<odoo>

  	<record id="base_view_users_form_inherit" model="ir.ui.view">
		<field name="name">base.view.users.form.inherit</field>
		<field name="model">res.users</field>
		<field name="priority">5</field>
		<field name="inherit_id" ref="base.view_users_form"/>
		<field name="arch" type="xml">
			<xpath expr="//page[@name='preferences']" position="inside">
                <group string="Establecimiento" groups="l10n_sv_fe.sv_fe_group_fel_manager" invisible="sv_fe_user_country_code != 'SV'">
                    <field name="sv_fe_establishment_id"/>
					<field name="sv_fe_identification_type"/>
					<field name="vat" string="NIT" invisible="sv_fe_identification_type != '36'"/>
				 	<field name="sv_fe_dui_field" invisible="sv_fe_identification_type != '13'"/>
				 	<field name="sv_fe_other_field" invisible="sv_fe_identification_type != '37'"/>
				 	<field name="sv_fe_passport_field" invisible="sv_fe_identification_type != '03'"/>
				 	<field name="sv_fe_carnet_residente_field" invisible="sv_fe_identification_type != '02'"/>
                </group>
			</xpath>
		</field>
	</record>

</odoo>